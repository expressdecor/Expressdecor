	<?php if($_lang->getId()!=$this->getCurrentStoreId()): ?>                   
		<a href="<?php echo $_lang->getCurrentUrl() ?>"><img src="<?php echo $this->getSkinUrl('images/globe.png') ?>" style="padding-right:5px;padding-top:4px;" /><?php echo $this->__($lang_title); ?></a>             
	<?php endif; ?>
<?php endforeach; ?>
 

<?php endif; ?>
 
