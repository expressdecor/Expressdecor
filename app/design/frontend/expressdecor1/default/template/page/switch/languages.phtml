?>

<?php if(count($this->getStores())>1): ?>

<?php if ($this->htmlEscape(Mage::app()->getStore()->getCode())=='es') 
		$lang_title="In English";
	else
		$lang_title="En Espa&ntilde;ol"; 
	?>

